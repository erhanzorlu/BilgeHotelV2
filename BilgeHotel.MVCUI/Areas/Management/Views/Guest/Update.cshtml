@model GuestVM
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Management/Views/Shared/_LayoutArea.cshtml";
}

@using (@Html.BeginForm("Update", "Guest", FormMethod.Post, new { @class = "form-signin" }))
{

@Html.HiddenFor(x => x.ID) @*Gizli sekilde id'yi tutup cekmek icin kullaniyorsun*@
<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Misafir Güncelle</p>
                                <form class="mx-1 mx-md-4">
                                    @ViewBag.ErrorMessage
                                    
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Ad: </label>

                                            @Html.TextBoxFor(x => x.FirstName, new { placeholder = "Ad", @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">Soyad: </label>
                                            @Html.TextBoxFor(x => x.LastName, new { placeholder = "Soyad", @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            @*@Html.ValidationMessageFor(x => x.IdentificationNumber)*@
                                            <label class="form-label" for="form3Example4c">TC Kimlik Numarası: </label>
                                            @Html.TextBoxFor(x => x.IdentificationNumber, new { placeholder = "Kimlik Numarası", @class = "form-control" })

                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button class="btn btn-primary btn-lg">Güncelle</button>
                                    </div>
                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                @*<img src="~/Areas/Management/Data/Screenshot_54.png" />*@
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                     class="img-fluid" alt="Sample image" style="width: 75%; height: 75%";>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
}
