
@{
    ViewBag.Title = "FindRooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Otel Rezervasyonu</title>
    <!-- Bootstrap CSS dosyası ekleme -->
