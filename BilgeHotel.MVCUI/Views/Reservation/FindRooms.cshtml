</head>
<body>
    <div class="container">
        <h1 class="mt-4">Müsait Oda Ara</h1>
        <span>@ViewBag.DateTimeError</span>
        <span>@ViewBag.PersonCountError</span>

        @using (Html.BeginForm("FindRooms", "Reservation", FormMethod.Post, new { @class = "form-signin" }))
        {


            @*if (Session["CheckInDate"] != null || Session["CheckInDate"] != null)
                {
                    <span>@Session["CheckInDate"] - @Session["CheckInOut"] tarihleri arasında yeni oda arat</span>
                }
                else
                {*@
            <div class="form-group">
                <label for="giris">Giriş Tarihi:</label>
                <input type="date" class="form-control" id="giris" name="checkIn">
            </div>

            <div class="form-group">
                <label for="cikis">Çıkış Tarihi:</label>
                <input type="date" class="form-control" id="cikis" name="checkOut">
            </div>
            @*}*@


            <div class="form-group">
                <label for="yetiskin">Yetişkin Sayısı:</label>
                <select class="form-control" id="yetiskin" name="adult">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>

            <div class="form-group">
                <label for="cocuk">Çocuk Sayısı:</label>
                <select class="form-control" id="cocuk" name="child">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>

            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <div class="form-group">
                    <label for="cocuk">Lütfen Rezervasyon Paketinizi Seçiniz: </label>
                    <select class="form-control" id="package" name="package">
                        <option value="1">Her şey dahil</option>
                        <option value="2">Tam Pansiyon</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Oda Bul</button>

        }
    </div>

    <!-- Bootstrap JS dosyasını ekleme (isteğe bağlı) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
