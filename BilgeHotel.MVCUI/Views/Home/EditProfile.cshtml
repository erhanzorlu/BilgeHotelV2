@model EditProfileVM
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="vh-100" style="background-color: #9A616D; display:flex; width:100%; height: 100%">
    <div class="container py-5 h-100" style="width: 100%; height: 100%">
        <div class="row d-flex justify-content-center align-items-center h-100" style="width: 100%; height: 100%">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center" style="display: flex">
                            <div class="card-body p-4 p-lg-5 text-black" style="display: flex">
                                <span></span>

                                @using (Html.BeginForm("EditProfile", "Home", FormMethod.Post, new { @class = "form-signin" }))
                                {
                                    @Html.HiddenFor(x => x.AppUser.AppUserID)
                                    @Html.HiddenFor(x => x.UserProfile.UserProfileID)
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Profilini Güncelle</span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="FirstName"></span>
                                        <label class="form-label" for="form2Example84">Ad: </label>
                                        @Html.TextBoxFor(x => x.AppUser.FirstName, new { @class = "form-control", placeholder = "Adınızı Giriniz" })
                                        @Html.ValidationMessageFor(x=>x.AppUser.FirstName)
                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="LastName"></span>
                                        <label class="form-label" for="form2Example61">Soyad: </label>
                                        @Html.TextBoxFor(x => x.AppUser.LastName, new { @class = "form-control", placeholder = "Soyadınızı Giriniz" })
                                        @Html.ValidationMessageFor(x => x.AppUser.LastName)
                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="IdentificationNumber"></span>
                                        <label class="form-label" for="form2Example62">TC.Kimlik Numarası: </label>
                                        @Html.TextBoxFor(x => x.AppUser.IdentificationNumber, new { @class = "form-control", placeholder = "Kimlik Numaranızı Giriniz" })
                                        @Html.ValidationMessageFor(x => x.AppUser.IdentificationNumber)
                                    </div>
                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="UserName"></span>
                                        <label class="form-label" for="form2Example62">Kullanıcı Adı: </label>
                                        @Html.TextBoxFor(x => x.UserProfile.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Giriniz" })
                                        @Html.ValidationMessageFor(x => x.UserProfile.UserName)
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block">Güncelle</button>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

