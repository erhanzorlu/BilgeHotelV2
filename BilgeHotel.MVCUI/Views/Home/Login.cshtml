@model LoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>

                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <span> </span>
                                @using (Html.BeginForm())
                                {
                                    <span style="color: darkgreen">@TempData["SuccesMessage"]</span>
                                    <span style="color: darkred">@ViewBag.LoginError</span>

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Hoşgeldiniz!</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Hesabınıza Giriş Yapınız</h5>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Email"></span>
                                        <label class="form-label" for="form2Example17">Email Adresi: </label>
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email Adresi Giriniz" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <span asp-validation-for="Password"></span>
                                        <label class="form-label" for="form2Example27">Şifre: </label>
                                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifrenizi Giriniz" })
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block">Giriş Yap</button>
                                    </div>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        @Html.ActionLink("Şifremi Unuttum", "ResetPassword", null, new { @style = "color: #393f81" })
                                    </p>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Hesabınız Yok Mu? @Html.ActionLink("Buradan Kaydolun!", "RegisterNow", "Register", new { @style = "color: #393f81" })
                                    </p>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

