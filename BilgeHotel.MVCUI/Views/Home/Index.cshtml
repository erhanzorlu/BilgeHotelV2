                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }
                sayac++;
            }

            //KRAL DAİRESİ
            else if (item.RoomID == 77 && sayac == 5)
            {
                foreach (var rf in Model.RoomFeaturesVm)
                {
                    if (rf.FeatureID == item.FeatureID)
                    {
                        <div class="row gx-4 gx-lg-5">
                            <div class="col-md-4 mb-5">
                                <div class="card h-100">

                                    <div class="card-body" style="display: table">
                                        @foreach (var roomAndImage in Model.RoomAndImagesVm)
                                        {
                                            foreach (var images in Model.ImagesVm)
                                            {
                                                if (roomAndImage.RoomID == item.RoomID && roomAndImage.ImageID == images.ImageID)
                                                {
                                                    <img src="@images.ImagePath" style="object-fit: cover; width: 50%; height: 50%">
                                                }
                                            }

                                        }
                                    </div>
                                    <div class="card-footer">
                                        <h2 class="card-title">@item.Capacity Kişilik Kral Dairesi</h2>
                                        <br />
                                        <p class="card-text">@rf.Description<br />Gecelik Fiyat: @item.PricePerNight₺</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }

        }
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/OutherSources/Index/dist/js/scripts.js"></script>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/OutherSources/owlcarousel/owl.carousel.min.js"></script>
</body>
</html>
