@model IndexVM
@{
    ViewBag.Title = "Home Page";
    int sayac = 1;
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Small Business - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/OutherSources/Index/dist/assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    @*<link href="~/OutherSources/Index/dist/css/styles.css" rel="stylesheet" />*@

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/OutherSources/owlcarousel/assets/animate.min.css" rel="stylesheet" />
    <link href="~/OutherSources/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/OutherSources/owlcarousel/assets/style.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid mb-3 justify-content-center">
        <div class="row px-xl-5">
            <div class="col-lg-8" style="align-content: center">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#header-carousel" data-slide-to="1"></li>
                        <li data-target="#header-carousel" data-slide-to="2"></li>
                        <li data-target="#header-carousel" data-slide-to="3"></li>
                        <li data-target="#header-carousel" data-slide-to="4"></li>
                        <li data-target="#header-carousel" data-slide-to="5"></li>
                        <li data-target="#header-carousel" data-slide-to="6"></li>
                        <li data-target="#header-carousel" data-slide-to="7"></li>
                        <li data-target="#header-carousel" data-slide-to="8"></li>
                    </ol>
                    <div class="carousel-inner">
                        @foreach (var image in Model.ImagesVm)
                        {
                            if (image.ImageID == 1)
                            {
                                <div class="carousel-item position-relative active" style="height: 430px;">
                                    <img class="position-absolute w-100 h-100" src="@image.ImagePath" style="object-fit: cover;">
                                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                        <div class="p-3" style="max-width: 700px;">
                                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@Model.HotelInfosVm.Name</h1>
                                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@Model.HotelInfosVm.Description <br /> @Model.HotelInfosVm.Address</p>
                                        </div>
                                    </div>
                                </div>
                            }

                            else if (image.ImageID > 1 && image.ImageID <= 2)
                            {
                                <div class="carousel-item position-relative" style="height: 430px;">
                                    <img class="position-absolute w-100 h-100" src="@image.ImagePath" style="object-fit: cover;">
                                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                        <div class="p-3" style="max-width: 700px;">
                                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Farklı Yatak Kombinasyonları</h1>
                                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Odalarımız içerisinde tek ve çift kişilik olmak üzere farklı yatak kombinasyonları mevcuttur.</p>
                                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="/Reservation/FindRooms">Şimdi Oda Bul!</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            else if (image.ImageID > 2 && image.ImageID <= 9)
                            {
                                <div class="carousel-item position-relative" style="height: 430px;">
                                    <img class="position-absolute w-100 h-100" src="@image.ImagePath" style="object-fit: cover;">
                                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                        <div class="p-3" style="max-width: 700px;">
                                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">Erken Rezervasyon Fırsatını Kaçırmayın!</h1>
                                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">Erken rezervasyonlarınızda seçeceğiniz tam pansiyon ve her şey dahil paketlere uygulanan indirimlerden faydalanın!</p>
                                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Şimdi satın al</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action-->
    <div class="card text-white bg-secondary my-5 py-4 text-center">
        <div class="card-body">
            <p style="color: darksalmon">En uygun fiyatlarla şimdi</p><a href="/Reservation/FindRooms" style="color: darkred"> rezervasyon yap!</a>
        </div>
    </div>
    <!-- Content Row-->
    <div class="container-fluid" style="align-content: center">
        <h2>KONAKLAMA İMKANLARIMIZ</h2>
        @foreach (var item in Model.RoomsVm)
        {

            if (item.Capacity == 1 && sayac == 1)
            {
                foreach (var rf in Model.RoomFeaturesVm)
                {
                    if (rf.FeatureID == item.FeatureID)
                    {
                        <div class="row gx-4 gx-lg-5">
                            <div class="col-md-4 mb-5">
                                <div class="card h-100">
                                    <div class="card-body" style="display: table">
                                        @foreach (var roomAndImage in Model.RoomAndImagesVm)
                                        {
                                            foreach (var images in Model.ImagesVm)
                                            {
                                                if (roomAndImage.RoomID == item.RoomID && roomAndImage.ImageID == images.ImageID)
                                                {
                                                    <img src="@images.ImagePath" style="object-fit: cover; width: 50%; height: 50%">
                                                }
                                            }

                                        }
                                    </div>
                                    <div class="card-footer">
                                        <h2 class="card-title">@item.Capacity Kişilik Oda</h2>
                                        <br />
                                        <p class="card-text">@rf.Description<br />Gecelik Fiyat: @item.PricePerNight₺</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }
                sayac++;
            }

            //KAPASİTE İKİ

            else if (item.Capacity == 2 && sayac == 2)
            {
